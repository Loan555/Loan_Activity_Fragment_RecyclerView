<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:left="8dp" android:right="11dp" />
                    <gradient android:angle="-90" android:endColor="@color/powder_pink" android:startColor="@color/fuchsia" />
                    <size android:width="43dp" android:height="28dp" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/icons_8_chart" android:tint="@color/white"/>
            </item>

        </layer-list>

    </item>

    <item android:state_selected="false" >
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <padding android:bottom="3dp" android:left="8dp" android:right="11dp" android:top="2dp" />
                    <solid android:color="@color/noColor" />
                    <size android:width="43dp" android:height="28dp" />
                    <corners android:radius="14dp" />
                </shape>
            </item>
            <item>
                <bitmap android:src="@drawable/icons_8_chart" android:tint="@color/black" />
            </item>
        </layer-list>
    </item>

</selector>