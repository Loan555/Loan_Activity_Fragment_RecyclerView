<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/noColor" />
            <corners android:radius="12.5dp" />
            <padding android:bottom="6dp" android:left="12dp" android:right="11dp" android:top="6dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#f21cc8" />
            <corners android:radius="12.5dp" />
            <padding android:bottom="10dp" android:left="20dp" android:right="20dp" android:top="10dp" />
        </shape>
    </item>

</selector>