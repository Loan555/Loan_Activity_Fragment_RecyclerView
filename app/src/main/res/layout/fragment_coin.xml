<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".home.CoinFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="128dp"
            android:adjustViewBounds="true"
            android:src="@drawable/componente_7_4"
            app:layout_constraintTop_toTopOf="parent"
            tools:layout_editor_absoluteX="1dp" />

        <ImageButton
            android:id="@+id/backSpace"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:background="@color/noColor"
            android:src="@drawable/ic_baseline_arrow_back_ios_24"
            app:layout_constraintBottom_toBottomOf="@id/guideline13"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline13" />

        <TextView
            android:id="@+id/tite1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/raleway_black"
            android:text="NEO INDEX"
            android:textColor="#3e3e3e"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@id/guideline13"
            app:layout_constraintLeft_toRightOf="@id/backSpace"
            app:layout_constraintTop_toTopOf="@id/guideline13" />

        <TextView
            android:id="@+id/tite2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tite1"
            android:text="USD"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="@id/tite1"
            app:layout_constraintTop_toBottomOf="@id/tite1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Binance"
            android:textSize="13sp"
            app:layout_constraintLeft_toRightOf="@id/tite2"
            app:layout_constraintRight_toRightOf="@id/tite1"
            app:layout_constraintTop_toBottomOf="@id/tite1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="30dp"
            android:background="@color/noColor"
            android:src="@drawable/icons_8_menu_vertical"
            app:layout_constraintBottom_toBottomOf="@id/guideline13"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="@id/guideline13" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="26dp"
            android:background="@drawable/card"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/guideline13">

            <ImageView
                android:id="@+id/arrowUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icons_8_long_arrow_up"
                app:layout_constraintBottom_toBottomOf="@id/guideline14"
                app:layout_constraintRight_toLeftOf="@id/number1"
                app:layout_constraintTop_toTopOf="@id/guideline14" />

            <TextView
                android:id="@+id/number1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/freckleface_regular"
                android:paddingRight="7dp"
                android:text="21,1637"
                android:textColor="@color/white"
                android:textSize="22sp"
                app:layout_constraintBottom_toBottomOf="@id/guideline14"
                app:layout_constraintLeft_toLeftOf="@id/guideline16"
                app:layout_constraintRight_toRightOf="@id/guideline16"
                app:layout_constraintTop_toTopOf="@id/guideline14" />

            <TextView
                android:id="@+id/titeUSD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/freckleface_regular"
                android:text="USD"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/guideline14"
                app:layout_constraintLeft_toRightOf="@id/number1"
                app:layout_constraintTop_toTopOf="@id/guideline14" />

            <TextView
                android:id="@+id/realTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/unkempt_regular"
                android:text="17:00:33  Real time"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:layout_constraintLeft_toLeftOf="@id/guideline16"
                app:layout_constraintRight_toRightOf="@id/guideline16"
                app:layout_constraintTop_toBottomOf="@id/number1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="RATE"
                android:textColor="#bcbcbc"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/number1"
                app:layout_constraintLeft_toLeftOf="@id/number1" />

            <TextView
                android:id="@+id/number2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/freckleface_regular"
                android:text="+2,0634 (+9,44%)"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="@id/guideline14"
                app:layout_constraintLeft_toLeftOf="@id/guideline15"
                app:layout_constraintRight_toRightOf="@id/guideline15"
                app:layout_constraintTop_toTopOf="@id/guideline14" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TODAY CHANGE"
                android:textColor="#bcbcbc"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/number2"
                app:layout_constraintRight_toRightOf="@id/number2" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.7" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.25" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            app:layout_constraintTop_toBottomOf="@id/card">

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.5" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/line2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.5" />

            <ImageButton
                android:id="@+id/btBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/noColor"
                android:src="@drawable/img_back"
                app:layout_constraintBottom_toBottomOf="@id/line1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="@id/line1"></ImageButton>

            <ImageButton
                android:id="@+id/btNext"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/noColor"
                android:src="@drawable/image"
                app:layout_constraintBottom_toBottomOf="@id/line1"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="@id/line1"></ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_view"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:paddingRight="10dp"
                android:paddingBottom="5dp"
                android:text="NEO Chart"
                app:layout_constraintBottom_toBottomOf="@id/line1"
                app:layout_constraintLeft_toLeftOf="@id/line2"
                app:layout_constraintRight_toRightOf="@id/line2"
                app:layout_constraintTop_toTopOf="@id/line1" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageView
            android:id="@+id/neoChart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="22dp"
            android:adjustViewBounds="true"
            android:src="@drawable/neo_chart"
            app:layout_constraintTop_toBottomOf="@id/row1" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/row_menu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="28dp"
            android:background="@drawable/tite_bar"
            android:padding="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/neoChart"></androidx.recyclerview.widget.RecyclerView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_Two"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@id/row_menu">

            <TextView
                android:layout_margin="8dp"
                app:layout_constraintRight_toRightOf="@id/raggruppa_38"
                app:layout_constraintLeft_toLeftOf="@id/raggruppa_38"
                android:id="@+id/tite1_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/black"
                android:textSize="10sp"
                app:layout_constraintBottom_toTopOf="@id/guidelineCenter1"
                android:text="Buy or Sell for NEO" />

            <TextView
                android:layout_margin="8dp"
                app:layout_constraintRight_toRightOf="@id/raggruppa_60"
                app:layout_constraintLeft_toLeftOf="@id/raggruppa_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/raleway"
                android:textColor="@color/black"
                android:textSize="10sp"
                android:textStyle="normal"
                app:layout_constraintBottom_toTopOf="@id/guidelineCenter1"
                android:text="Mkt Capitalization" />

            <ImageView
                android:padding="6dp"
                android:background="@drawable/bg_img"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/raggruppa_60"
                android:id="@+id/raggruppa_38"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/raggruppa_38"
                app:layout_constraintTop_toBottomOf="@id/guidelineCenter1" />

            <ImageView
                android:paddingRight="33dp"
                android:paddingLeft="32dp"
                android:paddingBottom="14dp"
                android:paddingTop="14dp"
                android:background="@drawable/bg_img"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="100dp"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginLeft="30dp"
                app:layout_constraintLeft_toRightOf="@id/raggruppa_38"
                android:id="@+id/raggruppa_60"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/raggruppa_60"
                app:layout_constraintTop_toBottomOf="@id/guidelineCenter1" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guidelineCenter1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                app:layout_constraintGuide_percent="0.22" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guidelineCenter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_begin="63dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>